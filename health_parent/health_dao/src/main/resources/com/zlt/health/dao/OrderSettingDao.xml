<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlt.health.dao.OrderSettingDao">
    <insert id="add" parameterType="OrderSetting">
        insert into t_ordersetting (orderDate,number,reservations)
        values(#{orderDate},#{number}, #{reservations})
    </insert>
    <update id="updateNumber" parameterType="OrderSetting">
        update t_ordersetting set number=#{number} where orderDate = #{orderDate}
    </update>
    <update id="updateReservations" parameterType="OrderSetting">
        update t_ordersetting set reservations=reservations+1 where orderDate = #{orderDate}
    </update>

    <select id="findByOrderDate" parameterType="date" resultType="com.zlt.health.pojo.OrderSetting">
        select * From t_orderSetting where orderDate = #{orderDate}
    </select>

    <select id="getOrderSettingByMonth" parameterType="map" resultType="com.zlt.health.pojo.OrderSetting">
         select * from t_ordersetting where orderDate between #{dateBegin} and #{dateEnd}
    </select>
</mapper>